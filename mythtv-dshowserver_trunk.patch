+void yuy2i420(AVFrame *dst, char *src, int w, int l)
+{
+  uint8_t *y, *u, *v;
+  y = dst->data[0];
+  u = dst->data[1];
+  v = dst->data[2];
+  int i,j;
+  for(i=0; i < l; i++) {
+    for(j=0; j < w; j+=2) {
+      *(y++) = *(src++);
+      *(u++) = *(src++);
+      *(y++) = *(src++);
+      *(v++) = *(src++);
+    }
+    i++;
+    for(j=0; j < w; j+=2) {
+      *(y++) = *src;
+      src+=2;
+      *(y++) = *src;
+      src+=2;
+   }
+  }
+}
